<h1 class="page-header">Abouts</h1>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Body</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @abouts.each do |about| %>
      <tr>
        <td><%= truncate(about.body, length: 50) %></td>
        <td><%=l about.created_at %></td>
        <td>
          <%= link_to admin_about_path(about), :class => "btn btn-info" do %>
            Show
          <% end %>
          <%= link_to edit_admin_about_path(about), :class => "btn btn-success" do %>
            Edit
          <% end %>
          <%= link_to admin_about_path(about), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @abouts, renderer: BootstrapPagination::Rails %>
<div style="clear:both;"></div>

<%= link_to "New", new_admin_about_path, :class => 'btn btn-primary' %>