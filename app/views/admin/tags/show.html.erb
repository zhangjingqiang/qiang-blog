<h1 class="page-header">Show Tag</h1>

<dl class="dl-horizontal">
  <dt><strong>Name:</strong></dt>
  <dd><%= @tag.try(:name) %></dd>
</dl>

<%= link_to "Back", admin_tags_path, :class => 'btn btn-default'  %>
<%= link_to "Edit", edit_admin_tag_path(@tag), :class => 'btn btn-default' %>
<%= link_to "Delete", admin_tag_path(@tag),
              :method => 'delete',
              :data => { :confirm => 'Are you sure?' },
              :class => 'btn btn-danger' %>
