<h1 class="page-header">Tags</h1>

<table class="table table-bordered table-striped table-hover table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created At</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%=l tag.created_at %></td>
        <td>
          <%= link_to admin_tag_path(tag), :class => "btn btn-info" do %>
            Show
          <% end %>
          <%= link_to edit_admin_tag_path(tag), :class => "btn btn-success" do %>
            Edit
          <% end %>
          <%= link_to admin_tag_path(tag), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" do %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @tags, renderer: BootstrapPagination::Rails %>
<div style="clear:both;"></div>

<%#= link_to "New", new_admin_tag_path, :class => 'btn btn-primary' %>